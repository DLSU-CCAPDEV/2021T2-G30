{{> navbar}}

        <!-- Centering -->
        <div
          class="card shadow row justify-content-center my-5 mx-auto" 
          style="width: 35em; border-radius: 15px"
        >
        <div class="card-body p-3">
            <h3 class="text-center">Edit Account</h1>
            <!-- Grey line -->
            <hr />
    
            <form action="/editaccount" method="POST" id="editAccountForm">
              <div class="mb-3">
                <div class="row">
                  <div class="col">
                    <h5>First Name</h5>
                    <input
                      type="text"
                      class="form-control p-2"
                      id="FirstNameEdit"
                      name="fName"
                      aria-describedby="emailHelp"
                      value="{{user.fName}}"
                      required
                    />
                  </div>
                  <div class="col">
                    <h5>Last Name</h5>
                    <input
                      type="text"
                      class="form-control p-2"
                      id="LastNameEdit"
                      name="lName"
                      aria-describedby="emailHelp"
                      value="{{user.lName}}"
                      required
                    />
                  </div>
                </div>
              </div>      

              <div class="mb-3">
                <h5>Email</h5>
                <input
                  type="email"
                  class="form-control p-2"
                  id="EmailEdit"
                  name="email"
                  aria-describedby="emailHelp"
                  value="{{user.email}}"
                  required
                />
              </div>
              <div class="mb-3">
                <h5>Password</h5>
                <input
                  type="password"
                  class="form-control p-2"
                  id="PasswordEdit"
                  name="pw"
                  value="{{user.pw}}"
                  minlength="5"
                  required
                />
              </div>
              <div class="mb-3">
                <h5>Profile Picture</h5>
                <input
                  type="file"
                  accept=".jpg, .jpeg, .png"
                  class="form-control p-2"
                  id="dPicture"
                  title="Upload display picture"
                  name="dPicture"
                />
              </div>
              <div class="mb-4">
                <h5>Bio</h5>
                <textarea class="form-control p-2" name="bio" id="BioEdit" maxlength="150" value="{{user.bio}}" aria-label="With textarea"></textarea>
              </div>
              <div class="modal-footer">
                <a onclick="location.href='/settings'">
                  <button type="button" class="btn btn-secondary" style="margin-bottom: -0.6em;">Cancel</button>
                </a>    
                <button type="submit" id="saveChangesbtn" class="btn btn-primary" style="margin-bottom: -0.6em;">Save changes</button>
              </div>
            </form>
          </div>
        </div>
