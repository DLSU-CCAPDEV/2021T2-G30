<body style="height: 100vh">
    <div
      class="card shadow top-50 start-50 translate-middle"
      style="width: 30em; border-radius: 15px"
    >
      <div class="card-body p-3">
        
        <h1 class="text-center"> <i class="fas fa-feather-alt" id="newEntry" title="New Entry"></i> Safe Space </h1>
        
        <!-- <img
          src="Images/LogoOne.jpg"
          alt="Logo"
          style="margin-top: -10px; margin-bottom: -15px; margin-left: 4.5em"
        /> -->

        <!-- Grey line -->
        <hr>

        <form action="/mainpage" id="loginForm">
          <div class="mb-3">
            <input
              type="email"
              class="form-control p-2"
              id="LoginUsername"
              placeholder="Username"
            />
            <!-- Required ^ -->
          </div>
          <div class="mb-0">
            <input
              type="password"
              class="form-control p-2"
              id="LoginPassword"
              placeholder="Password"
            />
            <!-- Required ^ -->
          </div>
          <div>
            <p class="mt-1 mb-4" style="font-size: 10pt">
              Don't have an account?
              <button
                type="button"
                class="btn btn-signup"
                data-bs-toggle="modal"
                data-bs-target="#registerModal"
                style="box-shadow: none"
              >
                Sign up here!
              </button>
            </p>
          </div>
          <button type="button" id="loginBtn" class="btn btn-custom mb-1 w-100 mt-0">
            Log In
          </button>
        </form>
      </div>
    </div>

    <div>
      <div
        class="modal fade"
        id="registerModal"
        tabindex="-1"
        aria-labelledby="registerModalLabel"
        aria-hidden="true"
      >
        <div class="modal-dialog modal-dialog-centered" style="width: 30em">
          <div class="modal-content" style="border-radius: 15px">
            <div class="modal-header">
              <h5 class="modal-title" id="registerModalLabel">Sign up</h5>
              <button
                type="button"
                class="btn-close"
                data-bs-dismiss="modal"
                aria-label="Close"
              ></button>
            </div>
            <div class="modal-body">
              <form action="/signup" method="POST">
                <div class="col">
                  <div class="mb-3">
                    <input
                      type="file"
                      accept=".jpg, .jpeg, .png"
                      class="form-control p-2"
                      id="DisplayPicture"
                      title="Upload display picture"
                      name="dPicture"
                      {{!-- required --}}
                    />
                  </div>
                </div>
                <div class="row mb-3">
                  <div class="col">
                    <div class="mb-0">
                      <input
                        type="text"
                        class="form-control p-2"
                        id="FirstName"
                        placeholder="First Name"
                        name="fName"
                        required
                      />
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-0">
                      <input
                        type="text"
                        class="form-control p-2"
                        id="LastName"
                        placeholder="Last Name"
                        name="lName"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="mb-3">
                  <input
                    type="email"
                    class="form-control p-2"
                    id="EmailRegister"
                    placeholder="Email"
                    name="email"
                    required
                  />
                </div>
                <div class="mb-3">
                  <input
                    type="text"
                    class="form-control p-2"
                    id="UserNameRegister"
                    placeholder="Username"
                    name="uName"
                    required
                  />
                </div>
                <div id="error" class="ps-1" style="font-size: 8pt; margin-top: -1.2em; color: red;"></div>
                <div class="mb-3" style="margin-top: 30px;" id="bioDiv">
                  <textarea
                    class="form-control"
                    maxlength="150"
                    placeholder="Bio (optional)"
                    aria-label="With textarea"
                    name="bio"
                  ></textarea>
                </div>
                <div class="row mb-3">
                  <div class="col">
                    <div class="mb-0">
                      <input
                        type="password"
                        class="form-control p-2"
                        id="PasswordRegister"
                        placeholder="Password"
                        name="pw"
                        required
                      />
                    </div>
                  </div>
                  <div class="col">
                    <div class="mb-0">
                      <input
                        type="password"
                        class="form-control p-2"
                        id="PasswordRegister2"
                        placeholder="Re-enter Password"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="modal-footer">
                  <button
                    {{!-- Change to button --}}
                    type="submit" 
                    class="btn btn-primary"
                    style="margin-bottom: -0.5rem; margin-right: -0.8rem"
                    id="submit"
                  >
                    Create Account
                  </button>
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>

    <script
      src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf"
      crossorigin="anonymous"
    ></script>

    <script src="Js/signup.js"></script>
    <script src="Js/login.js"></script>
  </body>